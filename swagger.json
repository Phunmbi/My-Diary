{
  "swagger": "2.0",
  "info": {
    "description": "This is the documentation for the My Diary application APIs.",
    "version": "1.0.0",
    "title": "My Diary",
    "contact": {
      "email": "funmbi.adeyokunnu@gmail.com"
    }
  },
  "host": "morning-falls-51849.herokuapp.com",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Users",
      "description": "Operations regarding users"
    },
    {
      "name": "Entries",
      "description": "Everything about diary entries"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Add a new user to the users table",
        "description": "Creating a new user on this platform requires making a call to this api endpoint.",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The details of a new user provided at the sign up page.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "A new user was created",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "userid": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "firstName": {
                        "type": "string"
                      },
                      "lastName": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                },
                "status": {
                  "type": "integer",
                  "format": "int64"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Failed to create a new user",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "format": "int64"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Give existing users access to the platform",
        "description": "Allowing already existing users to sign in to their account to access their resources on the platform",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The details of a new user provided at the login page.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Existing user signed in",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "userid": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "firstName": {
                        "type": "string"
                      },
                      "lastName": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                },
                "status": {
                  "type": "integer",
                  "format": "int64"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Authorization failed"
          },
          "404": {
            "description": "Email not found, User does not exist"
          }
        }
      }
    },
    "/entries": {
      "get": {
        "tags": [
          "Entries"
        ],
        "summary": "Get all entries for a specific signed in user",
        "description": "Using the `JWT` token returned upon signup or sign in. A user can then return protected resources. in this case all entries that already exists",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successfully returned all entries",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "id": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "title": {
                        "type": "string"
                      },
                      "details": {
                        "type": "string"
                      },
                      "time_created": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "userid": {
                        "type": "integer",
                        "format": "int64"
                      }
                    }
                  }
                },
                "status": {
                  "type": "integer",
                  "format": "int64"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "204": {
            "description": "Successful but no content"
          }
        }
      },
      "post": {
        "tags": [
          "Entries"
        ],
        "summary": "Add a new entry for this user",
        "description": "Create a new entry",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "The details of a new entry",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "details": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully added a new entry",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "id": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "title": {
                        "type": "string"
                      },
                      "details": {
                        "type": "string"
                      },
                      "time_created": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "user_id": {
                        "type": "integer",
                        "format": "int64"
                      }
                    }
                  }
                },
                "status": {
                  "type": "integer",
                  "format": "int64"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Can't add this entry"
          }
        }
      }
    },
    "/entries/{entryId}": {
      "get": {
        "tags": [
          "Entries"
        ],
        "summary": "Get entry by ID",
        "description": "Get a specific entry with the id of that entry",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "entryId",
            "in": "path",
            "description": "ID of entry involved",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successfully returned single entry with the ID",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "id": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "title": {
                        "type": "string"
                      },
                      "details": {
                        "type": "string"
                      },
                      "time_created": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "user_id": {
                        "type": "integer",
                        "format": "int64"
                      }
                    }
                  }
                },
                "status": {
                  "type": "integer",
                  "format": "int64"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Entry not found"
          }
        }
      },
      "put": {
        "tags": [
          "Entries"
        ],
        "summary": "Edit a user's entry",
        "description": "A user changing the details of an entry, this is only permitted if the entry was created within 24 hours of the time of sending this request",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "entryId",
            "in": "path",
            "description": "ID of entry to update",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Details of the changes to be made",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "details": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "id": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "title": {
                        "type": "string"
                      },
                      "details": {
                        "type": "string"
                      },
                      "time_created": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "user_id": {
                        "type": "integer",
                        "format": "int64"
                      }
                    }
                  }
                },
                "status": {
                  "type": "integer",
                  "format": "int64"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Entry not modified successfully because it can't be found"
          }
        }
      },
      "delete": {
        "tags": [
          "Entries"
        ],
        "summary": "Deletes an entry",
        "description": "A user deleting an entry",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "api_key",
            "in": "header",
            "required": false,
            "type": "string"
          },
          {
            "name": "entryId",
            "in": "path",
            "description": "Entry id to delete",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successfully deleted entry"
          },
          "404": {
            "description": "Entry was not found"
          }
        }
      }
    }
  }
}